---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}
---

<BaseLayout title="Writing" description="Articles on SEO, automation, AI and web development">
  <main class="max-w-[var(--width-content)] mx-auto px-[var(--spacing-page)] py-16">
    <header class="mb-12">
      <h1>Writing</h1>
      <p class="text-[var(--color-text-muted)] mt-2">
        Thoughts on SEO, automation, and AI.
      </p>
    </header>

    {sortedPosts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">
        No posts yet. Check back soon.
      </p>
    ) : (
      <div class="space-y-4">
        {sortedPosts.map((post) => (
          <a href={`/blog/${post.id}`} class="block group">
            <div class="flex items-baseline justify-between gap-4">
              <span class="text-[var(--color-text)] group-hover:opacity-60">{post.data.title}</span>
              <span class="text-sm text-[var(--color-text-muted)] shrink-0">{formatDate(post.data.date)}</span>
            </div>
            <p class="text-sm text-[var(--color-text-muted)] mt-1">{post.data.description}</p>
          </a>
        ))}
      </div>
    )}
  </main>
</BaseLayout>
