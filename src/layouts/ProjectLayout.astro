---
import BaseLayout from './BaseLayout.astro';
import '../styles/prose.css';

interface Props {
  title: string;
  description: string;
  year: number;
  category: string;
  url?: string;
  image?: string;
}

const { title, description, year, category, url, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <article class="max-w-[var(--width-content)] mx-auto px-[var(--spacing-page)] py-16">
    <header class="mb-12">
      <p class="text-sm text-[var(--color-text-muted)] mb-4">
        {category} · {year}
      </p>
      <h1 class="mb-4">{title}</h1>
      <p class="text-[var(--color-text-muted)]">{description}</p>
      {url && (
        <p class="mt-4">
          <a href={url} target="_blank" rel="noopener noreferrer" class="text-sm">
            View project →
          </a>
        </p>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>

    <footer class="mt-16 pt-8 border-t border-[var(--color-border)]">
      <a href="/projects" class="text-sm text-[var(--color-text-muted)]">
        ← Back to projects
      </a>
    </footer>
  </article>
</BaseLayout>
