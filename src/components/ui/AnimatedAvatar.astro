---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'w-10 h-10',
  md: 'w-16 h-16',
  lg: 'w-32 h-32',
  xl: 'w-64 h-64'
};
---

<div class:list={["animated-avatar", sizeClasses[size], className]}>
  <img
    src="/pixel-avatar.png"
    alt="Pierrick Deniel pixel art avatar"
    class="avatar-img"
  />
</div>

<style>
  .animated-avatar {
    border-radius: 50%;
    overflow: hidden;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
