---
interface Props {
  title: string;
  description: string;
  year: number;
  category: string;
  url?: string;
  slug?: string;
}

const { title, description, year, category, url, slug } = Astro.props;
const href = url || (slug ? `/projects/${slug}` : '#');
---

<article class="group p-6 rounded-lg border border-[var(--color-border)] hover:border-[var(--color-accent)]/50 transition-colors">
  <a href={href} target={url ? '_blank' : undefined} rel={url ? 'noopener noreferrer' : undefined} class="block">
    <div class="flex flex-col gap-3">
      <div class="flex items-center justify-between">
        <span class="text-xs px-2 py-1 bg-[var(--color-bg-alt)] text-[var(--color-text-muted)] rounded">
          {category}
        </span>
        <span class="text-sm text-[var(--color-text-muted)]">
          {year}
        </span>
      </div>
      <h3 class="font-serif text-lg font-semibold text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">
        {title}
        {url && (
          <svg class="inline-block w-4 h-4 ml-1 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        )}
      </h3>
      <p class="text-sm text-[var(--color-text-muted)] line-clamp-2">
        {description}
      </p>
    </div>
  </a>
</article>
